doctype html
html(lang = 'en')
  head
    title list of things
  body
    h1 List of Things
    ul
      each item in list
        li= item.name + ' (' + item.code.toUpperCase() + ') ' 
          a(href='/list/remove/' + item.code) remove
    form(action='list/add', method='POST')
      input(type='text', name='name')
      input(type='text', name='code')
      input(type='submit')
